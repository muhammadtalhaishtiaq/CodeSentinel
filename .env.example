# ===========================================
# CodeSentinel - Environment Variables
# ===========================================

# -----------------------
# Server Configuration
# -----------------------
NODE_ENV=development
BACKEND_PORT=8080
FRONTEND_PORT=5173

# -----------------------
# Application URLs
# -----------------------
BASE_URL=http://localhost:5173
FRONTEND_URL=http://localhost:5173
BACKEND_URL=http://localhost:8080

# -----------------------
# Database
# -----------------------
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/codesentinel?retryWrites=true&w=majority

# -----------------------
# JWT Configuration
# -----------------------
JWT_SECRET=dev_super_secret_jwt_key_minimum_32_characters_long
JWT_EXPIRE=24h

# -----------------------
# OAuth - GitHub
# -----------------------
GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret
GITHUB_CALLBACK_URL=http://localhost:8080/api/oauth/github/callback

# -----------------------
# OAuth - Bitbucket
# -----------------------
BITBUCKET_CLIENT_ID=your_bitbucket_client_id
BITBUCKET_CLIENT_SECRET=your_bitbucket_client_secret
BITBUCKET_CALLBACK_URL=http://localhost:8080/api/oauth/bitbucket/callback

# -----------------------
# OAuth - Azure DevOps
# -----------------------
AZURE_CLIENT_ID=your_azure_client_id
AZURE_CLIENT_SECRET=your_azure_client_secret
AZURE_TENANT_ID=your_azure_tenant_id
AZURE_CALLBACK_URL=http://localhost:8080/api/oauth/azure/callback

# -----------------------
# Email Service (Password Reset)
# -----------------------
EMAIL_SERVICE=gmail
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_app_password
EMAIL_FROM=your_email@gmail.com

# -----------------------
# AI/ML API
# -----------------------
AIMLAPI_KEY=your_aimlapi_key